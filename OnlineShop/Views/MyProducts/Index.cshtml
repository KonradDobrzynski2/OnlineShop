@model IEnumerable<OnlineShop.Models.Product>

@{
    ViewBag.Title = "MyProducts";
}

<h2>MyProducts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(product => product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(product => product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(product => product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(product => product.PathImage)
        </th>
        <th>
            @Html.DisplayNameFor(product => product.UserId)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PathImage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
